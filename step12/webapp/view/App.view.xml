<mvc:View controllerName="cw.demo.controller.App" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>helloPanelTitle}">
						<content>
							<Button press="onShowHello" 
							        text="{i18n>showHelloButtonText}"/>
							<Input description="Hello {/recipient/name}"
							       value="{/recipient/name}" 
							       valueLiveUpdate="true" 
							       width="60%"/>
						</content>
					</Panel>
						<Panel headerText="{i18n>helloPanelTitle}">
						<content>
							<Button press="onShowHello" 
							        text="{i18n>showHelloButtonText}"/>
							<Input description="Hello {/recipient/name}"
							       value="{/recipient/name}" 
							       valueLiveUpdate="true" 
							       width="60%"/>
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>